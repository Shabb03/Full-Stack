<%- include('header') -%>
        <div class="header">
            <div class="inner-header flex">
                <h1 class="is-size-1">Register</h1>
            </div>
        </div>
        
        <form id="register_form" class="box has-background-grey-lighter">
            <div class="field"></div>
                <label class="label" for="username-input">Username</label>
                <div class="control">
                    <input class="input" type="text" name="username-input" id="username" placeholder="Your username" required>
                </div>
            </div>
            <div class="field">
                <label class="label" for="email-input">Email</label>
                <div class="control">
                    <input class="input" type="email" name="email-input" id="email" placeholder="Your email" required>
                </div>
            </div>
            <div class="field">
                <label for="password-input">Password</label>
                <div class="control">
                    <input class="input" type="password" id="password" name="password-input" placeholder="Your password" required>
                </div>
            </div>
            <button class="button is-primary is-rounded" type="submit">Login</button>
        </form>

        <div>
            <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
              viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
              <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
              </defs>
              <g class="parallax">
                <use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
                <use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
                <use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
                <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
              </g>
            </svg>
        </div> 

		<script>
            function formValidator(event){
                event.preventDefault();
                let username = document.getElementById("username").value; 
                let email = document.getElementById("email").value;
                let password = document.getElementById("password").value;
                if( username == ""){
                    alert("Username cannot be null");
                }
                else if (email == "") {
                    alert("Email cannot be null");
                }
                else if (password == ""){
                    alert("Password cannot be null");
                }
                else{
                    fetch("http://127.0.0.1:8000/apiregister/", {
                    method: 'POST',
                    headers: {
		                'Accept': 'application/json',
		                'Content-Type': 'application/json'
                    },
		            body: JSON.stringify({username: username, password: password, email:email})
	                })
                    window.location.href = "/login";
                }
            }

            let myform = document.getElementById("register_form");
            myform.addEventListener('submit', formValidator);	
	    </script>
    <%- include('footer') -%>